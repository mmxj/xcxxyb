/* components/Model/Model.wxss */
.Model{
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 10000;
  top: 0;
  left: 0; 
}
.model-bg{
  position: absolute;
  width:100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
  z-index: 0;
}
.model-content{
  background: #fff;
  position: absolute;
  left: 0;
  z-index: 2;
  height: 400rpx;
  width: 100%;
  bottom:0;
  animation:mymove 0.5s normal;
}
@keyframes mymove{
  from {bottom:-400rpx;}
      to {bottom:0rpx;}
}
.model-title{
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 98rpx;
  border-bottom:1rpx solid #eee;
  position: relative;
}
.model-title .close{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 30rpx;
  top: 0;
}
.model-title .close image{
  width: 100%;
  height: 100%;
}
