  background: #fff;

}
.form-wrap{
  padding: 30rpx 50rpx; 
  padding-top: 100rpx;
}
.input-wrap{
  background: #f3f3f3;
  width:650rpx;
  height: 88rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

