/* pages/paycode/paycode.wxss */
.container{
  height: 100%;
}
.tabbar{
  width: 100%;
  height: 100rpx;
  background: #fff;
}
.tabbarIphonex{
  padding-bottom:68rpx;
  width: 100%;
  height: 100rpx;
  background: #fff;
}
.center{
    width: 100%;
    height: calc(100% - 100rpx);
    align-self:flex-start;
}
.centerIphonex{
  width:100%;
  height:calc(100% - 168rpx);
 align-self:flex-start;
}
 .card{
  display: flex;
  margin: 20rpx;
  background: #fff;
  height: 90rpx;
  line-height: 90rpx;
  justify-content: space-between;
  padding:0 20rpx;
  border-radius: 10rpx;
} 
.cardTitle{
  color: #000;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.chooseCard{
  color: #27b7fe;
}

.cardTitle image{
  width: 46rpx;
  height: 46rpx;
  margin-right:12rpx; 
}
.code{
  margin:20rpx 20rpx 0;
  background: #fff;
  border-radius:10rpx; 
  padding-bottom: 100rpx;
}
.line{
  height: 80rpx;
}
.barcode{
  padding: 60rpx 0 0;
}
.line image{
  width:100%;
  height: 100%; 
}
.barCanvas{
  height: 116rpx;
  width: 586rpx;
  margin: 0 auto;
  display: block;
}
.qrCode{
  width:460rpx;
  height: 440rpx;
  margin: auto;
  display: block;
}
image.qrCode{
  width: 360rpx;
  height: 360rpx;
  margin-top: 40rpx;
}
.barCodecenter{
  text-align: center;
  margin-top: 22rpx;
  color: #999;
}
.qrCode-text{
  font-size: 26rpx;
  color: #999;
  /* text-align: center; */
  display: flex;
  align-items: center;
  justify-content: center;

}
.safeLogo{
  height: 28rpx;
  width:22rpx;
  margin-right: 12rpx;
}
.noSign{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
}
.noSign .bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
}
.noSign .content{
    width: 100%;
    height: 100%;
    /* background: #fff; */
    position: relative;
    z-index: 100;
    padding:300rpx 0;
    letter-spacing: 2rpx;
}
.content-text{
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  margin:0 auto;
}
.login{
  width: 200rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  margin-top: 50rpx; 
}
.list-wrap{
  padding: 0 40rpx;
  height: 500rpx;
  box-sizing: border-box;
}
.list-wrap .list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 120rpx;
  border-bottom: 1rpx solid #eee;
}
.listcardname{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.listcardname image{
  width: 55rpx;
  height: 55rpx;
}
.bankcardtype{
  color: #999;
}